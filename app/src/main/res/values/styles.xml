<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="AppName">
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:textSize">@dimen/ts_22sp</item>
    </style>

    <style name="BottomNavTextActive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/murs_gothic_wide_dark</item>
    </style>

    <style name="BottomNavTextInactive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/murs_gothic_wide_dark</item>
    </style>

    <!--HEADERS-->
    <style name="Header_v1" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">48sp</item>
        <item name="android:fontFamily">@font/murs_gothic_wide_dark</item>
    </style>

    <style name="Header_ver2" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/ts_22sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/murs_gothic_wide_dark</item>
    </style>

    <!--SETTINGS-->
    <style name="SettingsStyle">
        <item name="android:textSize">@dimen/ts_16sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="android:drawableTint">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/murs_gothic_wide_dark</item>
    </style>

    <style name="ThemeSwitch">
        <item name="android:textSize">@dimen/ts_16sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:fontFamily">@font/murs_gothic_wide_dark</item>
        <item name="thumbTint">?attr/colorOnSecondary</item>
        <item name="trackTint">?attr/colorOnPrimary</item>
        <item name="android:drawableTint">?attr/colorOnPrimary</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <!--WORDS-->
    <style name="Words_style">
        <item name="android:textSize">@dimen/ts_16sp</item>
        <item name="android:fontFamily">@font/murs_gothic_wide_dark</item>
        <item name="android:textAllCaps">false</item>
        <item name="singleLine">false</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:paddingHorizontal">@dimen/padding_small</item>
    </style>

    <!--START_GAME-->
    <style name="Stats">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/murs_gothic_wide_dark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="Stats_window" parent="Stats">
        <item name="android:layout_width">178dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:layout_marginHorizontal">@dimen/padding_small</item>
        <item name="android:background">@drawable/button_medium</item>
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="Stats_notions" parent="Stats">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Stats_buttons" parent="Stats">
        <item name="android:layout_width">@dimen/sqr_button</item>
        <item name="android:layout_height">@dimen/sqr_button</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="Stats_buttons_left" parent="Stats_buttons">
        <item name="android:layout_marginTop">@dimen/dim_08dp</item>
        <item name="android:layout_marginEnd">@dimen/padding_small</item>
        <item name="android:src">@drawable/arrow_left</item>
    </style>

    <style name="Stats_buttons_right" parent="Stats_buttons">
        <item name="android:layout_marginTop">@dimen/dim_08dp</item>
        <item name="android:layout_marginStart">@dimen/padding_small</item>
        <item name="android:src">@drawable/arrow_right</item>
    </style>

    <style name="Stats_buttons_start" parent="Stats">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:background">@drawable/button_large</item>
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <!--END_GAME-->
    <style name="End_game_buttons">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/murs_gothic_wide_dark</item>
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginVertical">40dp</item>
    </style>

    <style name="End_game_score">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/murs_gothic_wide_dark</item>
    </style>
</resources>