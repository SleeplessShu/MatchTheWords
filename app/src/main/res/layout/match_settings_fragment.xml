<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftBorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/padding_large" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightBorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/padding_large" />

    <TextView
        android:id="@+id/tvMatchSettings"
        style="@style/Header_ver2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_20dp"
        android:paddingTop="@dimen/padding_largeXL"
        android:text="@string/empty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/first_language"
        style="@style/Stats"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_largeXL"
        android:gravity="center"
        android:text="1st language"
        app:layout_constraintEnd_toEndOf="@id/rightBorder"
        app:layout_constraintStart_toStartOf="@id/leftBorder"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/leftbutton1"
        android:layout_width="@dimen/sqr_button"
        android:layout_height="@dimen/sqr_button"
        android:backgroundTint="@color/bluegreen"
        android:src="@drawable/arrow_left"
        android:tint="@color/greyLight"
        app:layout_constraintEnd_toStartOf="@id/tvFirstLanguage"
        app:layout_constraintStart_toStartOf="@id/leftBorder"
        app:layout_constraintTop_toBottomOf="@id/first_language"/>

    <TextView
        android:id="@+id/tvFirstLanguage"
        style="@style/Stats"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/padding_small"
        android:layout_marginVertical="6dp"
        android:background="@color/bluegreen"
        android:gravity="center"
        android:text="spanish"
        app:layout_constraintBottom_toBottomOf="@id/leftbutton1"
        app:layout_constraintEnd_toStartOf="@id/rightButton1"
        app:layout_constraintStart_toEndOf="@id/leftbutton1"
        app:layout_constraintTop_toTopOf="@id/leftbutton1" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/rightButton1"
        android:layout_width="@dimen/sqr_button"
        android:layout_height="@dimen/sqr_button"
        android:backgroundTint="@color/bluegreen"
        android:src="@drawable/arrow_right"
        android:tint="@color/greyLight"
        app:layout_constraintEnd_toEndOf="@id/rightBorder"
        app:layout_constraintStart_toEndOf="@id/tvFirstLanguage"
        app:layout_constraintTop_toTopOf="@id/leftbutton1" />
    <TextView
        android:id="@+id/tvSecond_language"
        style="@style/Stats"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_medium"
        android:gravity="center"
        android:text="2nd language"
        app:layout_constraintEnd_toEndOf="@id/rightBorder"
        app:layout_constraintStart_toStartOf="@id/leftBorder"
        app:layout_constraintTop_toBottomOf="@id/leftbutton1" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/leftbutton2"
        android:layout_width="@dimen/sqr_button"
        android:layout_height="@dimen/sqr_button"
        android:backgroundTint="@color/bluegreen"
        android:src="@drawable/arrow_left"
        android:tint="@color/greyLight"
        app:layout_constraintEnd_toStartOf="@id/secondLanguage"
        app:layout_constraintStart_toStartOf="@id/leftBorder"
        app:layout_constraintTop_toBottomOf="@id/tvSecond_language" />

    <TextView
        android:id="@+id/secondLanguage"
        style="@style/Stats"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/padding_small"
        android:layout_marginVertical="6dp"
        android:background="@color/bluegreen"
        android:gravity="center"
        android:text="russian"
        app:layout_constraintBottom_toBottomOf="@id/leftbutton2"
        app:layout_constraintEnd_toStartOf="@id/rightButton2"
        app:layout_constraintStart_toEndOf="@id/leftbutton2"
        app:layout_constraintTop_toTopOf="@id/leftbutton2" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/rightButton2"
        android:layout_width="@dimen/sqr_button"
        android:layout_height="@dimen/sqr_button"
        android:backgroundTint="@color/bluegreen"
        android:src="@drawable/arrow_right"
        android:tint="@color/greyLight"
        app:layout_constraintEnd_toEndOf="@id/rightBorder"
        app:layout_constraintStart_toEndOf="@id/secondLanguage"
        app:layout_constraintTop_toTopOf="@id/leftbutton2" />



    <TextView
        android:id="@+id/wordsType"
        style="@style/Stats"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_medium"
        android:gravity="center"
        android:text="Words type"
        app:layout_constraintEnd_toEndOf="@id/rightBorder"
        app:layout_constraintStart_toStartOf="@id/leftBorder"
        app:layout_constraintTop_toBottomOf="@id/leftbutton2" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/bl_WordsType"
        android:layout_width="@dimen/sqr_button"
        android:layout_height="@dimen/sqr_button"
        android:backgroundTint="@color/bluegreen"
        android:src="@drawable/arrow_left"
        android:tint="@color/greyLight"
        app:layout_constraintEnd_toStartOf="@id/secondLanguage"
        app:layout_constraintStart_toStartOf="@id/leftBorder"
        app:layout_constraintTop_toBottomOf="@id/wordsType" />

    <TextView
        android:id="@+id/tvWordsType"
        style="@style/Stats"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/padding_small"
        android:layout_marginVertical="6dp"
        android:background="@color/bluegreen"
        android:gravity="center"
        android:text="a1"
        app:layout_constraintBottom_toBottomOf="@id/bl_WordsType"
        app:layout_constraintEnd_toStartOf="@id/br_WordsType"
        app:layout_constraintStart_toEndOf="@id/bl_WordsType"
        app:layout_constraintTop_toTopOf="@id/bl_WordsType" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/br_WordsType"
        android:layout_width="@dimen/sqr_button"
        android:layout_height="@dimen/sqr_button"
        android:backgroundTint="@color/bluegreen"
        android:src="@drawable/arrow_right"
        android:tint="@color/greyLight"
        app:layout_constraintEnd_toEndOf="@id/rightBorder"
        app:layout_constraintStart_toEndOf="@id/tvWordsType"
        app:layout_constraintTop_toTopOf="@id/bl_WordsType" />


    <TextView
        android:id="@+id/difficult"
        style="@style/Stats"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_medium"
        android:gravity="center"
        android:text="Difficult"
        app:layout_constraintEnd_toEndOf="@id/rightBorder"
        app:layout_constraintStart_toStartOf="@id/leftBorder"
        app:layout_constraintTop_toBottomOf="@id/bl_WordsType" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/bl_Difficult"
        android:layout_width="@dimen/sqr_button"
        android:layout_height="@dimen/sqr_button"
        android:backgroundTint="@color/bluegreen"
        android:src="@drawable/arrow_left"
        android:tint="@color/greyLight"
        app:layout_constraintEnd_toStartOf="@id/tvDifficult"
        app:layout_constraintStart_toStartOf="@id/leftBorder"
        app:layout_constraintTop_toBottomOf="@id/difficult" />

    <TextView
        android:id="@+id/tvDifficult"
        style="@style/Stats"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/padding_small"
        android:layout_marginVertical="6dp"
        android:background="@color/bluegreen"
        android:gravity="center"
        android:text="medium"
        app:layout_constraintBottom_toBottomOf="@id/bl_Difficult"
        app:layout_constraintEnd_toStartOf="@id/br_Difficult"
        app:layout_constraintStart_toEndOf="@id/bl_Difficult"
        app:layout_constraintTop_toTopOf="@id/bl_Difficult" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/br_Difficult"
        android:layout_width="@dimen/sqr_button"
        android:layout_height="@dimen/sqr_button"
        android:backgroundTint="@color/bluegreen"
        android:src="@drawable/arrow_right"
        android:tint="@color/greyLight"
        app:layout_constraintEnd_toEndOf="@id/rightBorder"
        app:layout_constraintStart_toEndOf="@id/tvDifficult"
        app:layout_constraintTop_toTopOf="@id/bl_Difficult" />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/b_new_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_largeXL"
        android:background="@drawable/word_background_default"
        android:paddingHorizontal="@dimen/dim_20dp"
        android:text="@string/button_text_start_game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>