<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/star_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/star"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/star_tr"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginEnd="60dp"
        android:src="@drawable/star"
        app:layout_constraintBottom_toTopOf="@id/star_main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/star_br"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginEnd="90dp"
        android:src="@drawable/star"
        app:layout_constraintTop_toBottomOf="@id/star_main"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/star_bl"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="-30dp"
        android:src="@drawable/star"
        app:layout_constraintBottom_toBottomOf="@id/star_main"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/star_tl"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="110dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/star"
        app:layout_constraintBottom_toTopOf="@id/star_main"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>